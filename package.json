{
  "name": "cljs-dev-template",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "imports": {
    "#cljs/*": "./cljs-dist/*"
  },
  "scripts": {
    "app-dev": "npm-run-all -p app-cljs-dev app-js-dev-wait",
    "app-cljs-dev": "shadow-cljs watch :app",
    "app-cljs-prod": "shadow-cljs release :app --pseudo-names",
    "app-js-dev-wait": "wait-on ./cljs-dist/app/app.main.js && npm run app-js-dev",
    "app-js-dev": "vite --config vite.config.js --port 4000 src/app/",
    "app-js-prod": "vite build --emptyOutDir --outDir ../dist/app src/app/",
    "server-dev": "npm-run-all -p server-cljs-dev server-js-dev-wait",
    "server-cljs-dev": "shadow-cljs watch :server",
    "server-cljs-prod": "shadow-cljs release :server --pseudo-names",
    "server-js-dev-wait": "wait-on ./cljs-dist/server/server.main.js && npm run server-js-dev",
    "server-js-dev": "nodemon -w ./src/server/*.js src/server/server.js",
    "server-js-bundle-wait": "wait-on ./cljs-dist/server/server.main.js && npm run server-js-bundle",
    "server-js-bundle": "esbuild ./src/server/server.js --platform=node --bundle --minify --outfile=./dist/server.js",
    "server-js-bin-wait": "wait-on ./dist/server.js && npm run server-js-bin",
    "server-js-bin": "pkg ./dist/server.js --out-path ./dist/bin/server",
    "server-prod": "npm-run-all -p server-cljs-prod server-js-bundle-wait server-js-bin-wait",
    "all-cljs-dev": "shadow-cljs watch :app :server",
    "all-cljs-prod": "shadow-cljs release :app :server --pseudo-names",
    "all-dev": "npm-run-all -p all-cljs-dev app-js-dev-wait server-js-dev-wait",
    "all-prod": "npm-run-all -p all-cljs-prod app-js-prod server-js-prod",
    "clean": "rm -r cljs-dist/* dist/*",
    "clear-cache": "rm -r .shadow-cljs/"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@elm-tooling/elm-language-server": "^2.8.0",
    "autoprefixer": "^10.4.16",
    "clj-kondo": "^2023.5.26",
    "elm-tooling": "^1.15.0",
    "esbuild": "^0.18.6",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "pkg": "^5.8.1",
    "postcss": "^8.4.33",
    "shadow-cljs": "^2.25.3",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^4.2.1",
    "vite-node": "^0.29.8",
    "vite-plugin-elm": "^2.9.0",
    "wait-on": "^7.0.1",
    "ws": "^8.13.0"
  },
  "dependencies": {
    "@andrewmacmurray/elm-concurrent-task": "^1.1.0",
    "atomico": "^1.75.2"
  }
}
